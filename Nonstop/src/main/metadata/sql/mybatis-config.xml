<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
 		 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 		"http://mybatis.org/dtd/mybatis-3-config.dtd">
  						
<!--	mybatis-config.xml :: MyBatis Framework  MetaData -->
<configuration>

	<!-- 기타 설정정보 :: [MyBatis_Home]/mybatis-3.2.1.pdf 참조 -->
	<settings>
		<setting name="callSettersOnNulls" value="false"/>
	</settings>	
	
	<!-- FQCN(Full Qualified Class Name) Alias(별칭관리) -->
	<typeAliases>
		<typeAlias alias="portfolio" type="com.nonstop.domain.Portfolio" />
		<typeAlias alias="statistics" type="com.nonstop.domain.Statistics" />
		<typeAlias alias="letter" type="com.nonstop.domain.Letter" />
     	<typeAlias alias="career" type="com.nonstop.domain.Career" />
      	<typeAlias alias="follow" type="com.nonstop.domain.Follow" />
		<typeAlias alias="scrap" type="com.nonstop.domain.Scrap" />
		<typeAlias alias="project" type="com.nonstop.domain.Project" />
	</typeAliases>
	
	 <!-- SQL Definition :: file include -->
	<mappers>
		<mapper resource="sql/PortfolioMapper.xml"/>
		<mapper resource="sql/StatisticsMapper.xml"/>
		<mapper resource="sql/LetterMapper.xml"/>
		<mapper resource="sql/CareerMapper.xml"/>
		<mapper resource="sql/FollowMapper.xml"/>
		<mapper resource="sql/ScrapMapper.xml"/>
		<mapper resource="sql/ProjectMapper.xml"/>

	</mappers>

</configuration>